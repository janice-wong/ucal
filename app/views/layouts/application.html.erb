<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/animate.min.css" rel="stylesheet"> 
    <link href="/css/lightbox.css" rel="stylesheet"> 
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/responsive.css" rel="stylesheet">

    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">    
  </head>

  <body>
    <header id="header">  
      <div class="navbar navbar-inverse" role="banner">
        <div class="container">
          <div class="navbar-header">
              <a class="navbar-brand">
                <% if current_user %>
                  <h1><a href="/events"><%= current_user.name.capitalize %>'s Calendar</a></h1>
                <% end %>
              </a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
                <li class="active"><a>today: <%= Date.today.strftime("%A, %b %e") %></a></li>
                <li class="dropdown"><a>Events (<%= EventInvitation.where(user_id: current_user.id, decision: "pending").count %>) <i class="fa fa-angle-down"></i></a>
                    <ul role="menu" class="sub-menu">
                      <li><a href="/events/new">Add Event</a></li>
                      <% if EventInvitation.where(user_id: current_user.id, decision: "pending").count > 0 %>
                        <li><hr></li>
                        <li><a><strong>Pending Events</strong></a></li>
                        <% EventInvitation.where(user_id: current_user.id, decision: "pending").each do |event| %>
                          <li><a href="/events/<%= event.event_id %>"><%= Event.find(event.event_id).name.capitalize %></a></li>
                        <% end %>
                      <% end %>
                      <% if EventInvitation.where(user_id: current_user.id, decision: "Accept").count > 0 %>
                        <li><hr></li>
                        <li><a><strong>Accepted Events</strong></a></li>
                        <% EventInvitation.where(user_id: current_user.id, decision: "Accept").each do |event| %>
                          <li><a href="/events/<%= event.event_id %>"><%= Event.find(event.event_id).name.capitalize %></a></li>
                        <% end %>
                      <% end %>
                    </ul>
                </li>                    
                <li class="dropdown"><a href="#">Groups (<%= GroupInvitation.where(user_id: current_user.id, decision: "pending").count %>) <i class="fa fa-angle-down"></i></a>
                    <ul role="menu" class="sub-menu">
                      <li><a href="/groups/new">Add Group</a></li>
                      <% if GroupInvitation.where(user_id: current_user.id, decision: "pending").count > 0 %>
                        <li><hr></li>
                        <li><a><strong>Pending Groups</strong></a></li>
                        <% GroupInvitation.where(user_id: current_user.id, decision: "pending").each do |group| %>
                          <li><a href="/groups/<%= group.group_id %>"><%= Group.find(group.group_id).name.capitalize %></a></li>
                        <% end %>
                      <% end %>
                      <% if GroupInvitation.where(user_id: current_user.id, decision: "Accept").count > 0 %>
                        <li><hr></li>
                        <li><a><strong>Accepted Groups</strong></a></li>
                        <% GroupInvitation.where(user_id: current_user.id, decision: "Accept").each do |group| %>
                          <li><a href="/groups/<%= group.group_id %>"><%= Group.find(group.group_id).name.capitalize %></a></li>
                        <% end %>
                      <% end %>
                    </ul>
                </li>
                <li><%= link_to 'Log Out', '/logout', {method: :delete} %></li>
              <% else %>
                <li><a href="/signup">Sign Up</a></li>
                <li><a href="/login">Log In</a></li>
              <% end %>                 
            </ul>
          </div>
          <div class="search">
              <form role="form">
                  <i class="fa fa-search"></i>
                  <div class="field-toggle">
                      <input type="text" class="search-form" autocomplete="off" placeholder="Search">
                  </div>
              </form>
          </div>
        </div>
      </div>
    </header>

    <script type="text/javascript" src="js/lightbox.min.js"></script>
    <script type="text/javascript" src="js/wow.min.js"></script>
    <script type="text/javascript" src="js/main.js"></script>   
    <%= yield %>
  </body>
</html>
