<%= form_tag '/login', method: :post do %>
  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 wow fadeInRight" data-wow-duration="500ms" data-wow-delay="300ms">
            <h2>Email</h2>
            <p><input type="email" name="email"></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 wow fadeInRight" data-wow-duration="500ms" data-wow-delay="300ms">
            <h2>Password</h2>
            <p><input type="password" name="password"></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 wow fadeInRight" data-wow-duration="500ms" data-wow-delay="300ms">
          <h2><button class="btn btn-success" type="submit">Log In</button></h2>
        </div>
      </div>
    </div>
  </section>
<% end %>